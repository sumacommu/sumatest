{
  "version": 2,
  "builds": [
    { "src": "api/app.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/characters/(.*)", "dest": "/characters/$1" },
    { "src": "/stages/(.*)", "dest": "/stages/$1" },
    { "src": "/api/(.*)", "dest": "/api/app.js" },
    { "src": "/(.*)", "dest": "/api/app.js" }
  ]
}