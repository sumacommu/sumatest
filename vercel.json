{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/characters/(.*)", "dest": "/characters/$1" },
    { "src": "/auth/(.*)", "dest": "app.js" },
    { "src": "/logout", "dest": "app.js" },
    { "src": "/(.*)", "dest": "app.js" }
  ]
}